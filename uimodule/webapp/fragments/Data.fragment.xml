<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="idData" title="{i18n>dataDialogTitle}" class="sapUiPopupWithPadding" contentHeight="20%" contentWidth="5%">
        <content>
            <VBox>
                <Label id="labelName" textAlign="Center" text="{i18n>name}: {model>/name}"></Label>
            </VBox>
            <VBox >
                <Label id="labelLastname" textAlign="Center" text="{i18n>lastname}: {model>/lastname}"></Label>
            </VBox>
            <VBox>
                <Label id="labelDni" textAlign="Center" text="{i18n>dni}: {model>/dni}"></Label>
            </VBox>
            <VBox >
                <Label id="labelBirthdate" textAlign="Center" text="{i18n>birthdate}: {model>/birthdate}"></Label>
            </VBox>
        </content>
        <endButton>
            <Button text="Cancelar" press="onCloseDataDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>